{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

  <h2>List books</h2>
  {{form(f)}}
  {% if books is empty%}
    <div class="alert alert-danger">
      No Books
    </div>
  {% endif %}
<table class="table">
  <thead>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Publication Date</th>
    <th>Enabled</th>
    <th>Author</th>
  </tr>
</thead>
<tbody>
  {% for a in books %}
    <tr>
      <td>{{a.id}}</td>
      <td>{{a.title}}</td>
      <td>{{a.publicationDate | date}}</td>
      <td>{{a.enabled}}</td>
      <td>{{a.author}}</td>

      <td>
           <a class="btn btn-outline-primary" href="{{path('app_book_update',{id:a.id})}}">
          Update</a>
      </td>
      <td>
        <a class="btn btn-outline-danger" href="{{path('app_book_delete',{id:a.id})}}">Remove</a>
      </td>

    </tr>
  </tbody>
  {% endfor %}
</table>
<a class="btn btn-outline-success" href="{{path('app_book_add')}}">Add Book</a>

</div>
{% endblock %}
